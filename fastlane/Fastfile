# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Run all tests"
  lane :tests do
    run_tests(
      scheme: "VoiLog",
      devices: ["iPhone 15 Pro"]
    )
  end

  desc "Build app for development"
  lane :build do
    build_app(
      scheme: "VoiLog",
      configuration: "Debug",
      export_method: "development",
      output_directory: "./build",
      output_name: "VoiLog-dev.ipa"
    )
  end

  desc "Submit a new Beta Build to TestFlight"
  lane :beta do
    increment_build_number(xcodeproj: "VoiLog.xcodeproj")
    build_app(
      scheme: "VoiLog",
      configuration: "Release",
      export_method: "app-store"
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Deploy a new version to the App Store"
  lane :release do
    # Ensure we're on the correct branch
    ensure_git_branch(branch: 'main')
    
    # Update version if needed
    # You can uncomment the following line if you want to manually specify a version
    # increment_version_number(version_number: "1.0.1")
    
    # Increment build number
    increment_build_number(xcodeproj: "VoiLog.xcodeproj")
    
    # Build the app
    build_app(
      scheme: "VoiLog",
      configuration: "Release",
      export_method: "app-store"
    )
    
    # Upload to App Store Connect
    upload_to_app_store(
      force: true, # Skip verification of HTML preview
      skip_metadata: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
    
    # Commit version bump
    commit_version_bump(
      xcodeproj: "VoiLog.xcodeproj",
      message: "Version Bump [ci skip]"
    )
  end
end
